{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cProfile File",
            "group": "test",
            "type": "shell",
            "dependsOrder": "sequence",
            "command": "python",
            "args": [
                "-m",
                "cProfile",
                "-o",
                "${relativeFile}.cprof",
                "-s",
                "cumulative",
                "${relativeFile}"
            ],
            "options": {
                "statusbar": {
                    "label": "cProfile File",
                    "color": "#34f104",
                    "icon": {
                        "id": "bracket"
                    }
                }
            }
        },
        {
            "label": "Open Snakeviz",
            "group": "test",
            "type": "shell",
            "dependsOrder": "sequence",
            "command": "snakeviz",
            "args": [
                "${relativeFile}.cprof"
            ],
            "options": {
                "statusbar": {
                    "label": "Open Snakeviz",
                    "color": "#04e9f1",
                    "icon": {
                        "id": "bracket"
                    }
                }
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}",
                "statusbar": {
                    "label": "Build",
                    "color": "#28f104",
                    "icon": {
                        "id": "bracket"
                    }
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}